{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Feedback",
  "type": "object",
  "required": ["date", "actions"],
  "properties": {
    "date": { "type": "string", "description": "YYYY-MM-DD" },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["APPROVE", "REJECT", "SET_RULE", "ADD_TO_LIST", "REMOVE_FROM_LIST", "NOTE"] },
          "payload": { "type": "object" }
        }
      }
    }
  },
  "additionalProperties": true
}
